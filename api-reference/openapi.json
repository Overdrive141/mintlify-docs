{
  "openapi": "3.0.1",
  "info": {
    "title": "Foundation API",
    "description": "API documentation for Foundation's site and config management.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://foundation-server.up.railway.app/api/v1"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/sites": {
      "x-group-name": "Site API",
      "get": {
        "summary": "Retrieve all sites",
        "description": "Returns all sites that the user has access to.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of sites",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Site"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sites/{siteId}": {
      "x-group-name": "Site API",
      "put": {
        "summary": "Update a site",
        "parameters": [
          {
            "name": "siteId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Site updated successfully"
          }
        }
      }
    },
    "/sites/trigger-build": {
      "x-group-name": "Site API",
      "post": {
        "summary": "Trigger a site build",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Build triggered successfully"
          }
        }
      }
    },
    "/sites/build/{buildId}": {
      "x-group-name": "Site API",
      "get": {
        "summary": "Get build status",
        "parameters": [
          {
            "name": "buildId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Build status retrieved successfully"
          }
        }
      }
    },
    "/config": {
      "x-group-name": "Config API",
      "get": {
        "summary": "Retrieve all configs",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of configs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Config"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new config",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "Config created successfully"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "Site": {
        "type": "object",
        "properties": {
          "siteId": { "type": "string" },
          "siteInfo": {
            "type": "object",
            "properties": {
              "template": { "type": "string" },
              "domain_name": { "type": "string" },
              "cloudflare_project_name": { "type": "string" },
              "locale": { "type": "string" },
              "title": { "type": "string" },
              "elevator_pitch": { "type": "string" },
              "description": { "type": "string" }
            }
          },
          "configId": { "type": "string" },
          "data": { "type": "array" },
          "status": { "type": "string", "enum": ["pending", "completed"] },
          "production": { "type": "boolean" },
          "createdBy": { "type": "string" }
        }
      },
      "Config": {
        "type": "object",
        "properties": {
          "configId": { "type": "string" },
          "site_info": {
            "type": "object",
            "properties": {
              "keywords": { "type": "array", "items": { "type": "string" } },
              "long_tailed_keywords": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "audience": {
            "type": "object",
            "properties": {
              "geo": { "type": "array", "items": { "type": "string" } },
              "locale": { "type": "string" },
              "age_range": { "type": "string" },
              "gender": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  }
}
